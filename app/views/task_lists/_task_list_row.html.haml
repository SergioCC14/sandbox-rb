%div{:id => "task_list_row_#{task_list.id}"}
  = link_to(task_list_path(:id => task_list.id), :remote => true, :class => 'project_row inline-block') do
    %h5
      %div= task_list.name
      %small=Time.at(task_list.created_at).strftime("%d/%m/%Y")
    .text= "Tasks: (#{task_list.tasks_count})"

-#
  -session = RedboothRuby::Session.new(token: current_token)
  - client = RedboothRuby::Client.new(session)
  - @tasks = client.task(:index, task_list_id: task_list.id).all

  = render :partial => 'task_lists/list_tasks', :locals => {:tasks => @tasks}