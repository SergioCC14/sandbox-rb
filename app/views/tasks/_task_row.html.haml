.task
  %h6
    %div= task.name
    %small= Time.at(task.created_at).strftime("%d/%m/%Y")
  .text= raw strip_links(task.description)

  =link_to("Delete", delete_task_path(:id => task.id, :p_id => task.project_id), :method => :delete, :class => 'pull-right', :data => {:confirm => 'Are you sure you want to remove this Task?'})
  .clearfix